{
  "id": "anti-bufferbloat",
  "name": "Anti-Bufferbloat (CAKE)",
  "description": "Uses CAKE qdisc for advanced Active Queue Management (AQM) to eliminate bufferbloat while maintaining good throughput. Ideal for connections with bufferbloat issues detected by latency-under-load tests.",
  "risk_level": "medium",
  "requires_reboot": false,
  "sysctl": {
    "net.core.default_qdisc": "cake",
    "net.ipv4.tcp_congestion_control": "bbr",
    "net.core.rmem_max": 16777216,
    "net.core.wmem_max": 16777216,
    "net.ipv4.tcp_rmem": "4096 131072 16777216",
    "net.ipv4.tcp_wmem": "4096 65536 16777216",
    "net.ipv4.tcp_mtu_probing": 1,
    "net.ipv4.tcp_ecn": 1,
    "net.ipv4.tcp_ecn_fallback": 1
  },
  "qdisc": {
    "type": "cake",
    "interfaces": "default-route"
  },
  "systemd": {
    "ensure_qdisc_service": true
  }
}
