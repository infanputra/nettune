{
  "id": "satellite-link",
  "name": "Satellite/High-Latency Link",
  "description": "Optimized for satellite or other high-latency links (300ms+ RTT). Uses very large buffers and aggressive scaling to handle high bandwidth-delay product scenarios.",
  "risk_level": "high",
  "requires_reboot": false,
  "sysctl": {
    "net.core.default_qdisc": "fq",
    "net.ipv4.tcp_congestion_control": "bbr",
    "net.core.rmem_max": 134217728,
    "net.core.wmem_max": 134217728,
    "net.core.rmem_default": 2097152,
    "net.core.wmem_default": 2097152,
    "net.ipv4.tcp_rmem": "4096 2097152 134217728",
    "net.ipv4.tcp_wmem": "4096 2097152 134217728",
    "net.ipv4.tcp_mtu_probing": 1,
    "net.ipv4.tcp_slow_start_after_idle": 0,
    "net.ipv4.tcp_window_scaling": 1,
    "net.ipv4.tcp_timestamps": 1,
    "net.ipv4.tcp_sack": 1,
    "net.ipv4.tcp_no_metrics_save": 1,
    "net.ipv4.tcp_moderate_rcvbuf": 1,
    "net.core.netdev_max_backlog": 10000
  },
  "qdisc": {
    "type": "fq",
    "interfaces": "default-route"
  },
  "systemd": {
    "ensure_qdisc_service": true
  }
}
